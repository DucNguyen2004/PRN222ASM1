@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var userRole = HttpContextAccessor.HttpContext?.Session.GetInt32("UserRole");
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - FUNewsManagement</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Styles -->
    <style>
        body {
            display: flex;
            flex-direction: column;
            height: 100vh;
            overflow: hidden; /* Prevent body scroll */
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .content-wrapper {
            flex-grow: 1;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    <!-- Sticky Navbar -->
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">FUNewsManagement</a>
            <ul class="navbar-nav ms-auto d-flex flex-row gap-4">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="News" asp-action="Index">News</a>
                </li>

                @if (!string.IsNullOrEmpty(userName)) // Check if session contains user email
                {
                    @if (userRole == 1)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Staff" asp-action="Index">Staff Area</a>
                        </li>
                        
                    }
                    else if (userRole == 2)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Lecturer" asp-action="Index">Lecturer Panel</a>
                        </li>
                    }
                    else 
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="content-wrapper">
        @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
